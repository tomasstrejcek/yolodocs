{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["bin/**/*.ts", "src/cli/**/*.ts", "src/schema/**/*.ts", "src/markdown/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist", "src/site/**", "**/*.test.ts"]
}
